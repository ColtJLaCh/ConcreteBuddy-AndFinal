<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settingsTitle">

        <SwitchPreferenceCompat
            app:key="bold"
            app:title="@string/settingsSetBold" />

        <ListPreference
            app:defaultValue="Metric"
            app:entries="@array/units"
            app:entryValues="@array/units"
            app:key="units"
            app:title="@string/settingsMeasurementType"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="feedback"
            app:title="@string/settingsSendFeedback" />

    </PreferenceCategory>

</PreferenceScreen>